<div class="container min-h-full flex flex-col gap-8 sm:px-6 lg:px-8">
  <header class="w-full flex">
    <ul class="w-full flex align-center justify-between items-center gap-4 text-2xl font-bold underline text-red-600">
      <li class="flex gap-4 items-center">
        <div class="w-16 h-16 p-0 rounded-full overflow-hidden">
          <% if @user.avatar.attached? %>
            <%= image_tag rails_blob_url(@user.avatar, disposition: "inline" ) %>
          <% else %>
            <p>Avatar não disponível.</p>
          <% end %>
        </div>
        <h1 class="text-xl font-bold">
          Olá <%= current_user.email %>!!!!
        </h1>
      </li>
        <%= button_to "Sign out" , destroy_user_session_path, method: :delete %>
      </li>
    </ul>
  </header>

  <section class="container flex justify-start">
    <h1 class="text-2xl font-bold">
      Aqui é o DASHBOARD!!!!
    </h1>
  </section>
</div>